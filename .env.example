# FastAPI Lung Cancer Detection Microservice Configuration

# Application Settings
APP_NAME="Lung Cancer Detection API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# CORS Settings (comma-separated for multiple origins)
ALLOWED_ORIGINS="*"
# ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080,https://yourdomain.com"

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/tiff,image/bmp"

# Model Configuration
MODEL_PATH="/app/models/lung_cancer_model.h5"
MODEL_INPUT_SIZE="224,224"  # Width,Height
CONFIDENCE_THRESHOLD=0.5

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security (change in production)
SECRET_KEY="your-secret-key-change-in-production-use-long-random-string"

# Health Check
HEALTH_CHECK_INTERVAL=30

# Database (if needed in future)
# DATABASE_URL="postgresql://user:password@localhost/dbname"

# External API Keys (if needed)
# SOME_API_KEY="your-api-key-here"

# Monitoring and Observability
# ENABLE_METRICS=true
# METRICS_PORT=8001